&spi1 {
	pinctrl-names = "default";

	status = "okay";

	adc0 {
		compatible = "mcp3208";
		reg = <0x0>;
		spi-max-frequency = <200000>;
	};

	adc1 {
		compatible = "mcp3208";
		reg = <0x1>;
		spi-max-frequency = <200000>;
	};
};